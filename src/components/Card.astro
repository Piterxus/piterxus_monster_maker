---
// Recibe una imagen y el precio
const { imgSrc, price } = Astro.props;
---

<div class="card_test">
  <div class="card_front">
    <img class="front_img sepia" src={imgSrc} alt="Front Image" />
  </div>
  <div class="card_front card_front--back">
    <img class="back_img" src={imgSrc} alt="Back Image" />
  </div>
  <p>{price} â‚¬</p>
</div>

<style>
  .card_test {
    position: relative;

    cursor: pointer;
    transition: 1.1s ease-in-out;
    transform-style: preserve-3d;
    background-color: #303224;
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    text-align: center;
  }

  .card_test:hover {
    transform: rotateY(0.5turn) scale(1.1);
   
  }

  .card_front {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    transition: 1s cubic-bezier(0, 0, 0, 2.57);
    -webkit-box-reflect: below -12px linear-gradient(transparent, #00000000, rgb(0
            0 0 / 14%));
  }

  .card_front--back {
    transform: rotateY(0.5turn);
  }

  .front_img,
  .back_img {
    width: 300px;
    height: 300px;
    object-fit: cover;
    border-radius: 1rem;
    margin-top: 15px;
  }

  .sepia {
    filter: sepia(100%);
  }

  p {
    text-align: center;
    color: white;
  }
</style>
