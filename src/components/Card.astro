---
// Recibe una imagen y el precio
const { imgSrc, price } = Astro.props;
---

<div class="card_test">
  <img src={imgSrc} alt="" />
  <p>{price} â‚¬</p>
</div>

<style>
  img {
    width: 300px;
    height: 300px;
    border-radius: 10px;
    border: 1px solid #303224;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    filter: sepia(100%); /* Aplica el filtro sepia al 100% */
    object-fit: cover;
    cursor: pointer; /* Cambia el cursor al pasar por encima */
  }

  img:hover {
    filter: none; /* Elimina el filtro al hacer hover */
  }

  .card_test {
    background-color: #303224;
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    text-align: center;
    width: 300px;
    height: 90%;
  }

  p {
    margin: 0;
  }
</style>
