---
// Aquí puedes definir las props si deseas pasar imágenes dinámicamente en lugar de tenerlas estáticas
const { frontImg, backImg, price } = Astro.props;
---

<div class="container">
  <div class="card_test">
    <div class="card_front">
      <img class="front_img" src={frontImg} alt="Front Image" />
    </div>
    <div class="card_front card_front--back">
      <img class="back_img" src={backImg} alt="Back Image" />
    </div>
    <p>{price} €</p>
  </div>
</div>

<style>
  .container {
    --width: 240px;
    --height: 330px;
    width: 100vw;
    display: flex;
    justify-content: center;
    perspective: 300px;
  }

  .card_test {
    position: relative;
    width: var(--width);
    height: var(--height);
    cursor: pointer;
    transition: 1.1s ease-in-out;
    transform-style: preserve-3d;
  }

  .card_test:hover {
    transform: rotateY(0.5turn);
  }

  .card_front {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    transition: 1s cubic-bezier(0, 0, 0, 2.57);
    -webkit-box-reflect: below -12px linear-gradient(transparent, #00000000, rgb(0
            0 0 / 14%));
  }

  .card_front--back {
    transform: rotateY(0.5turn);
  }

  .front_img,
  .back_img {
    width: var(--width);
    height: var(--height);
    object-fit: cover;
    border-radius: 1rem;
  }

  p {
    text-align: center;
    color: white;
  }
</style>
